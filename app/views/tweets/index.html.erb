<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Content</th>
      <th>RT</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><img src="<%= tweet.user.photo_url %>" alt=user_photo width='40' height='40'></td>
        <td><%= tweet.user %></td>
        <td><%= tweet.content %></td>
        <td>     
          <% if user_signed_in? %>
            <% if tweet.retweeted?(current_user) %>
                <%= button_to "Retweet", retweet_tweet_path(tweet), disabled:true %>
                <%= tweet.n_retweet %>
              </tr>
            <% else %>
            <%= button_to "Retweet", retweet_tweet_path(tweet)%>
                <%= tweet.n_retweet %>
            <% end %>
          <% end %>
        </td>
      <td><%= link_to 'Show', tweet %></td>
      <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
      <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>

  
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
